<body class="<%= pageData.current.id %>">



  <% include ../../images/icons.svg %>

  <% include app-menu.html.ejs %>

  <div class="app__body">
    <style>
      h1,h2,h3{
        /*color: <%= pageData.current.color %>;*/
      }
      .project__header__title h1,
      .project__header__title h2,
      /*.project__header__title h3,*/
      .project__header__title p{
        color: white;
      }

      a{
        color: <%= pageData.current.color %>;
      }


      .slider__captions .current strong{
          color: <%= pageData.current.color %>;
      }

      <% var gradient2 = tinycolor(pageData.current.color).setAlpha(0).toRgbString(); %>
      <% var gradient1 = tinycolor(pageData.current.color).setAlpha(0.9).toRgbString(); %>

      .project__header:before{
        background-image:
        linear-gradient(to right, <%= gradient1 %>, <%= gradient2 %>),
          radial-gradient(rgba(0,0,0,0), rgba(0,0,0,0.3));
      }

      .process{
        background: <%= pageData.current.color %>;
      }

    </style>

    <% if(typeof pageData.current.type !== 'undefined') {%>

      <section class="project__header" style="background-color: <%= pageData.current.color %>; background-image: url(/images/heros/hero-<%- pageData.current.id %>.png);">
        <div class="project__header__title">
            <h1><%- pageData.current.title %></h1>
            <h3><%= pageData.current.client %></h3>
          <p><%= pageData.current.description %></p>
          <img class="project__header__hero" src="/images/hero-slide-<%- pageData.current.id %>.png" alt="">
        </div>
      </section>


    <% } %>
