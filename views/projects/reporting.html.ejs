          </video>
        </div>

        <!-- image and content -->
        <div class="video-slide">
          <video autoplay loop muted playsinline>
            <source src="/images/2-charts.mp4">
            <!-- <source src="image.webm" onerror="fallback(parentNode)"> -->
            <!-- <img src="image.gif"> -->
          </video>
        </div>
        <div class="video-slide">
          <video autoplay loop muted playsinline>
            <source src="/images/2-animation.mp4">
            <!-- <source src="image.webm" onerror="fallback(parentNode)"> -->
            <!-- <img src="image.gif"> -->
          </video>
        </div>

        <div class="video-slide">
          <video autoplay loop muted playsinline>
            <source src="/images/4-split.mp4">
            <!-- <source src="image.webm" onerror="fallback(parentNode)"> -->
